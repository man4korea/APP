{
  "agent": {
    "name": "Code Simplifier",
    "description": "복잡한 코드를 초보자도 이해할 수 있게 간단하게 변환하는 전문 에이전트",
    "version": "1.0.0",
    "created": "2025-08-03",
    "author": "Claude Code BPM System"
  },
  "capabilities": {
    "languages": [
      "javascript",
      "python", 
      "php",
      "java",
      "c++",
      "html",
      "css",
      "sql"
    ],
    "features": [
      "code_analysis",
      "logic_decomposition", 
      "variable_renaming",
      "comment_generation",
      "structure_improvement",
      "beginner_friendly_explanation"
    ]
  },
  "tools": {
    "filesystem": true,
    "text_editor": true,
    "code_analysis": true,
    "web_search": true,
    "github": true
  },
  "prompts": {
    "system_prompt_file": "./code-simplifier-system-prompt.md",
    "example_inputs": [
      "복잡한 한 줄 체이닝 코드",
      "중첩된 조건문",
      "복잡한 반복문",
      "함수형 프로그래밍 패턴"
    ],
    "output_format": {
      "sections": [
        "원본 코드 분석",
        "단순화된 코드",
        "개선 사항 설명", 
        "추가 학습 자료"
      ]
    }
  },
  "settings": {
    "language": "ko",
    "target_audience": "programming_beginners",
    "code_style": "verbose_with_comments",
    "explanation_level": "detailed"
  }
}